{
  "manifest_version": 2,

  "name": "DOM diff Extension",
  "description": "",
  "version": "2.0",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "tabs",
    "http://*/*", "https://*/*"
  ],
  "background":
  {
    "scripts": ["dist/background-bundle.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": [ "dist/inject-bundle.js"]
  }],
  "commands": {
    "Screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+5"
      },
      "description": "Screenshot"
    },
    "ScreenshotPrepare": {
      "suggested_key": {
        "default": "Ctrl+Shift+8"
      },
      "description": "Screenshot Prepare"
    }
  }
}